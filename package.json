{
  "name": "terminal-sound-alert",
  "displayName": "Faaah Terminal Error Sound",
  "description": "Plays a sound when the terminal shows an error and sound name - faaah",
  "version": "0.0.1",
  "publisher": "parmeshgaud17",
  "engines": {
    "vscode": "^1.93.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Parmeshg-17/terminal-sound-alert"
  },
  "categories": [
    "Other"
  ],
  "icon": "logo.ico",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminalSound.uploadSound",
        "title": "Faaah: Select Custom Sound"
      },
      {
        "command": "terminalSound.clearSound",
        "title": "Faaah: Clear Custom Sound"
      },
      {
        "command": "terminalSound.testSound",
        "title": "Faaah: Play Test Sound"
      }
    ],
    "configuration": {
      "title": "Terminal Sound Alert",
      "properties": {
        "terminalSound.customSoundPath": {
          "type": "string",
          "default": "",
          "description": "Path to your custom sound file (.mp3 or .wav)"
        },
        "terminalSound.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable terminal error sounds"
        },
        "terminalSound.cooldownMs": {
          "type": "integer",
          "default": 1200,
          "description": "Minimum delay (in milliseconds) between sound plays"
        },
        "terminalSound.triggerKeywords": {
          "type": "array",
          "default": [
            "error:",
            "fail:",
            "failed",
            "fatal:",
            "exception",
            "traceback",
            "cannot find path",
            "no such file or directory",
            "command not found",
            "not recognized as an internal or external command",
            "because it does not exist"
          ],
          "items": {
            "type": "string"
          },
          "description": "Terminal output keywords to trigger the sound"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx @vscode/vsce package --allow-missing-repository"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/play-sound": "^1.1.2",
    "@types/vscode": "^1.93.0",
    "typescript": "^5.0.0"
  }
}